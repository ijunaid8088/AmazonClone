<%- layout("layout") -%>
<div class="form-wrapper">
  <h1>Sign Up</h1>
  <form method="POST">
    <div class="form-item">
      <label for="name"></label>
      <input type="text" name="name" required="required" placeholder="Name"></input>
    </div>
    <div class="form-item">
      <label for="email"></label>
      <input type="email" name="email" required="required" placeholder="Email Address"></input>
    </div>
    <div class="form-item">
      <label for="password"></label>
      <input type="password" name="password" required="required" placeholder="Password"></input>
    </div>
    <div class="form-item">
      <label for="password"></label>
      <input type="password" name="password" required="required" placeholder="Retype - Password"></input>
    </div>
    <div class="button-panel">
      <input type="submit" class="button" title="Sign up" value="Sign Up"></input>
    </div>
  </form>
  <div class="form-footer">
    <p><a href="/signin">Already have an accoont?</a></p>
    <p><a href="#">Forgot password?</a></p>
  </div>
</div>